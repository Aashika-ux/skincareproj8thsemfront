<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomePageFragment">

    <!-- Search Section -->
    <LinearLayout
        android:id="@+id/search_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal"
        android:background="@color/primary_color"
        android:gravity="center">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="@drawable/round"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_square"
            android:backgroundTint="@color/background"
            android:drawableStart="@drawable/outline_search_24"
            android:hint="Search..."
            android:inputType="text"
            android:padding="12dp" />
    </LinearLayout>

    <!-- Highlighted Product Section -->
    <LinearLayout
        android:id="@+id/place_details_section"
        android:layout_below="@id/search_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="260dp">

            <ImageView
                android:id="@+id/place_image"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:scaleType="centerCrop"
                android:background="@drawable/curved_rectangle"
                android:clipToOutline="true"
                android:src="@drawable/slider" />

            <LinearLayout
                android:id="@+id/des_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="10dp">

                <TextView
                    android:id="@+id/text_overlay1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beauty Hub \nRetinol"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/text_overlay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs.2300"
                    android:textColor="@color/background"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:padding="10dp"
                    android:background="@drawable/curved_rectangle"
                    android:backgroundTint="@color/primary_color" />

                <TextView
                    android:id="@+id/text_overlay3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="rapti-2,gadyauli-Chitwan"
                    android:textSize="18sp"
                    android:padding="5dp"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <!-- Recommendations Label with Spinner -->
    <LinearLayout
        android:id="@+id/recommendation_label_section"
        android:layout_below="@id/place_details_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="23dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/recommendation_text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Popular SkinCare Products"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:background="@drawable/curved_rectangle"
            android:backgroundTint="@color/primary_color"
            android:popupBackground="@color/primary_color"
            android:padding="5dp"/>
    </LinearLayout>

    <!-- RecyclerView for Products in 3 columns -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_products"
        android:contentDescription="Products"
        android:layout_below="@id/recommendation_label_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

</RelativeLayout>

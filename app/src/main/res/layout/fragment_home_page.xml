<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomePageFragment">

    <!-- Search Section -->
    <LinearLayout
        android:id="@+id/search_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal"
        android:background="@color/primary_color"
        android:gravity="center">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="@drawable/round"
            android:src="@drawable/logo" />

        <AutoCompleteTextView
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_square"
            android:drawableStart="@drawable/outline_search_24"
            android:hint="Search..."
            android:inputType="text"
            android:padding="12dp" />

    </LinearLayout>
    <!-- Slider Section -->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/sliderViewPager"
        android:layout_below="@id/search_section"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />


    <!-- Recommendations Label with Spinner -->
    <LinearLayout
        android:id="@+id/recommendation_label_section"
        android:layout_below="@id/sliderViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="23dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/recommendation_text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Popular SkinCare Products"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:background="@drawable/curved_rectangle"
            android:backgroundTint="@color/primary_color"
            android:popupBackground="@color/primary_color"
            android:padding="5dp"/>
    </LinearLayout>

    <!-- RecyclerView for Products in 3 columns -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_products"
        android:contentDescription="Products"
        android:layout_below="@id/recommendation_label_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/back"
                android:padding="10dp"
                android:src="@drawable/baseline_arrow_back_ios_new_24" />

            <!-- Title -->
            <TextView
                android:id="@+id/recommended_for"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/btn_back"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Sensitive Skin"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Product Title -->
            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recommended_for"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Niacinamide 10% + Zink 1%"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Product Image -->
            <ImageView
                android:id="@+id/product_image"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_below="@id/product_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/amcare" />

            <!-- Recommended By -->
            <TextView
                android:id="@+id/tv_recommended_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Recommended by: Dr. XYZ"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="italic" />

            <!-- Description -->
            <TextView
                android:id="@+id/product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_recommended_by"
                android:layout_marginTop="16dp"
                android:justificationMode="inter_character"
                android:textSize="15sp" />

            <!-- Usage Header -->
            <TextView
                android:id="@+id/product_usage_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_description"
                android:layout_marginTop="16dp"
                android:text="Usage"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Usage Content -->
            <TextView
                android:id="@+id/product_usage_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_usage_header"
                android:layout_marginTop="8dp"
                android:justificationMode="inter_character"
                android:textSize="15sp" />

            <!-- Expected Results -->
            <TextView
                android:id="@+id/header_expected_results"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_usage_content"
                android:layout_marginTop="16dp"
                android:text="Expected Results"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/content_expected_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/header_expected_results"
                android:layout_marginTop="8dp"
                android:justificationMode="inter_character"
                android:textSize="14sp" />

            <!-- Info Row -->
            <LinearLayout
                android:id="@+id/layout_info_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/content_expected_results"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="When to use:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/time_of_use"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Good for:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/shelf_life"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <!-- Do Not Use Button -->
            <TextView
                android:id="@+id/btn_do_not_use"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_info_row"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="8dp"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/red_color"
                android:background="@drawable/curved_rectangle"
                android:backgroundTint="@color/primary_color"
                android:text="DO NOT USE WITH" />

            <!-- Incompatible Products ChipGroup -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipgroup_incompatible_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_do_not_use"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="8dp"
                android:singleLine="false" />

            <!-- Add to Routine Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_to_routine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/chipgroup_incompatible_products"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/curved_rectangle"
                android:backgroundTint="@color/button_color"
                android:text="ADD TO ROUTINE"
                android:textColor="@color/white"
                app:backgroundTint="@null" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
